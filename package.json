{
  "name": "digital-id-project",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && (cd backend && npm install)",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "node": "npx hardhat node",
    "deploy:localhost": "npx hardhat run --network localhost scripts/deploy.js",
    "deploy:mumbai": "npx hardhat run --network mumbai scripts/deploy.js",
    "upgrade:mumbai": "npx hardhat run --network mumbai scripts/upgrade.js",
    "backend": "cd backend && node server.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "dotenv": "^16.1.4",
    "ethers": "^6.15.0",
    "hardhat": "^2.22.5",
    "ipfs-http-client": "^60.0.0"
  }
}
